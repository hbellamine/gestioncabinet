<div class="container">
    <%= simple_form_for [@patient,@consultation] do |f| %>

        <%= f.input :date, label: "Date de consultation" %>
        <%= f.input :motif, label: "Motif de consultation" %>
        <%= f.input :examenclinique, label: "Examen Clinique" %>
        <%= f.input :examencomplementaire, label: "Examen Complémentaire" %>
        <%= f.input :diagfinal, label: "Diagnostic Final" %>
        <%= f.input :pictures, as: :file, input_html: { multiple: true }, style:"color:white" %>
        <%=f.submit "Créer consultation", class: "btn btn-primary btn-block"%>
  <%end%>
</div>
