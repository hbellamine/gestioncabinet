<div class="container">
    <%= simple_form_for (@patient) do |f| %>

        <%= f.input :nom %>
        <%= f.input :prenom, label: "Prénom" %>
        <%= f.input :datedenaissance, label:"Date de naissance", as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :sexe, collection: Patient.sexes.keys %>
        <%= f.input :email, label: "E-mail" %>
        <%= f.input :telephone, label: "Téléphone" %>
        <%= f.input :adresse, label: "Adresse"%>
        <%= f.input :cin, label: "CIN" %>
        <%=f.submit "Sauvegarder", class: "btn btn-primary btn-block"%>
        <%= link_to "Retour", root_path, class:"btn btn-danger btn-block"%>
  <%end%>
</div>

